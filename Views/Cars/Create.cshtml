@model CarsInsideGarage.Models.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Register Car";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header">
                <h3 class="mb-0">Manual Car Entry</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" class="needs-spinner">
                    <div class="mb-3">
                        <label class="form-label">License Plate Number</label>
                        <input asp-for="CarPlateNumber" class="form-control" placeholder="e.g. B 1234 AB" />
                    </div>

                    <button type="submit" class="btn btn-register w-100">
                        <span class="spinner-border spinner-btn" role="status"></span>
                        Register Car
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
