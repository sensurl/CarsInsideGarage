@model CarsInsideGarage.Models.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Register Car";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title mb-0">Manual Car Entry</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">

                    <partial name="_CarForm" model="Model" />

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">Save to Registry</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>