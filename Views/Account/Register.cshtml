@model CarsInsideGarage.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card bg-dark text-light shadow-lg">
            <div class="card-header text-center">
                <h4>Create Account</h4>
                <p class="text-muted small mb-0">Join Your Parking Spot</p>
            </div>
            <div class="card-body">

                <form asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control bg-secondary text-light border-0" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control bg-secondary text-light border-0" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control bg-secondary text-light border-0" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Select Role</label>
                        <select asp-for="Role" class="form-select bg-secondary text-light border-0">
                            <option value="">-- Choose Role --</option>
                            <option value="Driver">Driver</option>
                            <option value="GarageOwner">Garage Owner</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">
                            Register
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
