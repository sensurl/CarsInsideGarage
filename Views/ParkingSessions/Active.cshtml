@using System.Globalization

@model CarsInsideGarage.Models.ViewModels.SessionActiveViewModel

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Current Session: @Model.CarPlateNumber</h4>
        </div>
        <div class="mb-3">
            <label class="text-muted small fw-bold">Garage</label>
            <div class="fs-5">@Model.GarageName</div>
        </div>

        <div class="card-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <div class="row mb-4">
                <div class="col-sm-6">
                    <p class="text-muted mb-1">Entry Time</p>
                    <h5>@Model.EntryTime.ToString("MMM dd, HH:mm")</h5>
                </div>

                <div class="col-sm-6 text-end">
                    <p class="text-muted mb-1">Accrued Amount</p>
                    <h2 class="fw-bold">@Model.AccruedAmount.ToString("C", new CultureInfo("fr-FR"))</h2>
                </div>
            </div>

            <hr />

            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="text-muted">Paid:</span>
                    <span class="badge bg-secondary">@Model.AmountPaid.ToString("C", new CultureInfo("fr-FR"))</span>
                </div>

                @if (Model.AmountPaid < Model.AccruedAmount)
                {
                    <form asp-action="Pay" method="post" class="d-flex gap-2">
                        <input type="hidden" name="sessionId" value="@Model.Id" />
                        <input type="number" name="amount" step="0.01" class="form-control" placeholder="Amount" style="width: 100px;" required />
                        <button type="submit" class="btn btn-primary">Pay Now</button>
                    </form>
                }
                else
                {
                    <form asp-action="Exit" method="post">
                        <input type="hidden" name="sessionId" value="@Model.Id" />
                        <button type="submit" class="btn btn-success px-5">Release Gate & Exit</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>