@model CarsInsideGarage.Models.ViewModels.FeeCreateViewModel

@{
    ViewData["Title"] = "Add Price Plan";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header">
                <h3 class="mb-0 text-accent">New Fee Structure</h3>
            </div>
            <div class="card-body p-4">
                <p class="text-muted small mb-4">Define the rates for this plan. These will be applied to garages that select this structure.</p>

                <form asp-action="Create" class="needs-spinner">
                    <partial name="_FeeForm" model="Model" />

                    <button type="submit" class="btn btn-register w-100 mt-4">
                        <span class="spinner-border spinner-btn" role="status"></span>
                        <i class="bi bi-cash-stack me-2"></i> Establish Rate Plan
                    </button>

                </form>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a asp-controller="Garages" asp-action="Index" class="btn btn-outline-secondary">
                Cancel and Return
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
