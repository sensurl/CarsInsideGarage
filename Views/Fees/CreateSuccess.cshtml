@using System.Globalization

@model CarsInsideGarage.Models.ViewModels.FeeCreateViewModel

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 text-center mt-3">
            <div class="mb-2">
                <i class="bi bi-check-circle-fill" style="font-size: 3.5rem; color: var(--accent);"></i>
            </div>
            <h2 class="text-white mb-3">Rate Plan Created</h2>

            <div class="card p-3 mb-3 shadow">
                <h4 class="mb-2">Pricing Success!</h4>
                <hr class="mt-0 mb-2" />
                <p class="mb-0">
                    Hourly: <strong style="color: var(--accent)">@Model.HourlyRate.ToString("C", new CultureInfo("fr-FR"))</strong>
                </p>
                <small class="text-muted">This plan is now available for new garages.</small>
            </div>

            <div class="text-start">
                <button class="btn btn-sm btn-outline-secondary w-100 mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#reviewData">
                    Review Plan Details ▾
                </button>
                <div class="collapse" id="reviewData">
                    <div class="border p-3 rounded mb-3 bg-dark">
                        <partial name="_FeeForm" model="Model" />
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2">
                <a asp-controller="Garages" asp-action="Index" class="btn btn-primary btn-lg">
                    Back to Garage Map
                </a>
            </div>
        </div>
    </div>
</div>