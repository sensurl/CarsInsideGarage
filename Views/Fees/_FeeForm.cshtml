@model CarsInsideGarage.Models.ViewModels.FeeCreateViewModel

<div class="mb-3 text-start">
    <label asp-for="HourlyRate" class="form-label text-muted small fw-bold">HOURLY RATE</label>
    <div class="input-group">
        <span class="input-group-text bg-dark border-secondary text-accent">$</span>
        <input asp-for="HourlyRate"
               type="number"
               step="0.01"
               min="0"
               class="form-control money-input"
               onfocus="this.select();" />
    </div>
    <span asp-validation-for="HourlyRate" class="text-danger"></span>
</div>

