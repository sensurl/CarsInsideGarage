@{
    ViewData["Title"] = "The Ultimate Parking Assistant";
}

<div class="container mt-4">

    <div class="text-center mb-4">
        <h1 class="display-5">Find a parking spot in Sofia city</h1>
        <p class="lead">Check availability and fees instantly.</p>
    </div>

    <div class="row justify-content-center text-center">

        <!-- Option 1: Use current location -->
        <div class="col-md-5 mb-4">
            <div class="card shadow-sm p-3">
                <h4>Use My Location</h4>
                <p>See available parking spots around where you are right now.</p>
                <button id="btnUseLocation" class="btn btn-primary btn-lg w-100" onclick="findNearest()">
                    Share My Location
                </button>
            </div>
        </div>

        <!-- Option 2: Search another area -->
        <div class="col-md-5 mb-4">
            <div class="card shadow-sm p-3">
                <h4>Search Another Area</h4>
                <p>Planning to drive somewhere? Check parking before you go.</p>
                <input id="searchBox" class="form-control form-control-lg mb-3"
                       placeholder="Enter address or area…" />
                <button id="btnSearchArea" class="btn card-header bg-primary w-100">
                    Show on Map
                </button>
            </div>
        </div>

    </div>


    <div class="mt-5">
        <!-- Interactive Google Map here -->
        <div id="map" style="height: 300px; width: 90%;"></div>
    </div>

</div>

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Sofia Center
            const lat = 42.6977;
            const lng = 23.3219;

            // Initialize the map on the "map" div
            var map = L.map('map').setView([lat, lng], 13);

            // Add OpenStreetMap tiles (The "Skin" of the map)
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);

            // Add a marker for the center
            L.marker([lat, lng]).addTo(map)
                .bindPopup('Sofia City Center')
                .openPopup();
        });
    </script>
}