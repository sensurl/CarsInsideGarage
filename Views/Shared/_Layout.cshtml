<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YourParkingSpot</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarsInsideGarage.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-p-circle-fill"></i> YourParkingSpot
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link nav-btn text-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-btn text-white" asp-controller="Garages" asp-action="Index">Find Parking</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle nav-btn text-white-50" href="#" id="ownerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Owner Panel
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="ownerDropdown">
                                <li><h6 class="dropdown-header">Garage Management</h6></li>
                                <li><a class="dropdown-item" asp-controller="Garages" asp-action="Index">My Garages</a></li>
                                <li><a class="dropdown-item" asp-controller="ParkingSessions" asp-action="ActiveList">Current Occupancy</a></li>
                                <li><a class="dropdown-item" asp-controller="Fees" asp-action="Index">Manage Fees</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Finance</h6></li>
                                <li><a class="dropdown-item" asp-controller="Garages" asp-action="RevenueReport">Revenue & Accounting</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown border-start ms-2 ps-2">
                            <a class="nav-link dropdown-toggle nav-btn text-secondary" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                System Admin
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" asp-controller="Cars" asp-action="Index">Vehicle Registry (All Cars)</a></li>
                                <li><a class="dropdown-item" asp-controller="Garages" asp-action="Create">Register New Garage</a></li>
                            </ul>
                        </li>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item ms-auto d-flex align-items-center text-light">
                                <span class="me-3">
                                    Hello @User.Identity.Name
                                </span>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-outline-light btn-sm">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-success" asp-controller="Account" asp-action="Login">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Account" asp-action="Register">
                                    Register
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - YourUltimateParkingAssistant - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>