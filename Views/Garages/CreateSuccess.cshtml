@model CarsInsideGarage.Models.ViewModels.GarageCreateViewModel

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 text-center mt-3">

            <div class="mb-2">
                <i class="bi bi-check-circle-fill" style="font-size: 3.5rem; color: var(--accent);"></i>
            </div>

            <h2 class="text-white mb-3">Garage Registered</h2>

            <div class="card p-3 mb-3">
                <h4 class="mb-2">Success!</h4>
                <hr class="mt-0 mb-2" />
                <p class="mb-0">
                    Name:
                    <strong style="color: var(--accent)">@Model.Name</strong>
                </p>
                <small class="text-muted">Your garage is now part of the map.</small>
            </div>

            <div class="text-start">
                <button class="btn btn-sm btn-outline-secondary w-100 mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#reviewData">
                    View Entry Details ▾
                </button>
                <div class="collapse" id="reviewData">
                    <div class="border p-3 rounded mb-3 bg-dark text-start">
                        <ul class="list-unstyled text-white">
                            <li><strong>Capacity:</strong> @Model.Capacity</li>
                            <li><strong>Area:</strong> @Model.SelectedArea</li>
                            <li><strong>GPS:</strong> @Model.ParkingCoordinates</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-5">
            <a asp-action="Index" class="btn btn-primary btn-lg px-5">
                <i class="bi bi-map-fill"></i> Back to Garage Map
            </a>
        </div>
    </div>
</div>
